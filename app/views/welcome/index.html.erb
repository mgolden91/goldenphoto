

<h1 class="ui center aligned header">GoldenPhotos.com</h1>

<% if Image.count == 0 %>
  <a href="/users/sign_in" class="item">
    <img class="ui fluid image" src="../../assets/Goldenphotohome.jpg">
  </a>
<% else %>
  <div class="ui center-aligned container">
    <%= image_tag @images.sample.picture%>
  </div><br />
  <div class="ui grid">
    <div class="five column row">
      <% Category.all.each do |categorynav| %>
      <div class="column">
        <%= image_tag @images.sample.picture%>
        <div class="ui huge center aligned header"><%= link_to "#{categorynav.name}", category_path(categorynav) %></div>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
